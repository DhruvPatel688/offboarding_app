<div class="container mt-5">
  <div class="row">
    <div class="col-md-12">
      <h1>Asset Details</h1>
    </div>
  </div>

  <div class="row mt-3">
    <div class="col-md-6">
      <div class="card">
        <div class="card-body">
          <h5 class="card-title">Asset Information</h5>
          <p class="card-text"><strong>Name:</strong> <%= @asset.name %></p>
          <p class="card-text"><strong>Returned:</strong> <%= @asset.returned ? "Yes" : "No" %></p>
          <p class="card-text"><strong>Condition:</strong> <%= @asset.condition %></p>
          <p class="card-text"><strong>Notes:</strong> <%= @asset.notes %></p>
        </div>
      </div>
    </div>
  </div>

  <div class="row mt-3">
    <div class="col-md-12">
      <%= link_to "Edit", edit_offboarding_asset_path(@offboarding, @asset), class: "btn btn-primary" %>
      <%= link_to "Back to Assets", offboarding_assets_path(@offboarding), class: "btn btn-secondary" %>
    </div>
  </div>
</div>