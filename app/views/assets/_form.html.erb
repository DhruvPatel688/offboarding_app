<%= form_with(model: [@offboarding, asset]) do |form| %>
  <% if asset.errors.any? %>
    <div class="alert alert-danger">
      <h4><%= pluralize(asset.errors.count, "error") %> prohibited this asset from being saved:</h4>

      <ul>
        <% asset.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="mb-3">
    <%= form.label :name, class: "form-label" %>
    <%= form.text_field :name, class: "form-control" %>
  </div>

  <div class="mb-3">
    <%= form.label :returned, class: "form-label" %>
    <%= form.check_box :returned, class: "form-check-input" %>
  </div>

  <div class="mb-3">
    <%= form.label :condition, class: "form-label" %>
    <%= form.text_field :condition, class: "form-control" %>
  </div>

  <div class="mb-3">
    <%= form.label :notes, class: "form-label" %>
    <%= form.text_area :notes, class: "form-control", rows: 5 %>
  </div>

  <div>
    <%= form.submit class: "btn btn-primary" %>
  </div>
<% end %>