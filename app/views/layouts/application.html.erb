<!DOCTYPE html>
<html>
  <head>
    <title>Offboarding Tracker</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag "application", media: "all", "data-turbo-track": "reload" %>
    <%= javascript_include_tag "application", type: "module", "data-turbo-track": "reload" %>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Poppins:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;0,800;0,900;1,100;1,200;1,300;1,400;1,500;1,600;1,700;1,800;1,900&display=swap" rel="stylesheet">
  </head>


  <body class="bg-light">
    <nav class="navbar navbar-expand-lg navbar-light shadow-sm" style="background-color: #f8f9fa;">
      <div class="container">
        <%= link_to "Offboarding Tracker", root_path, class: "navbar-brand fw-bold", style: "color: #2c3e50;" %>

        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent">
          <span class="navbar-toggler-icon"></span>
        </button>

        <div class="collapse navbar-collapse" id="navbarSupportedContent">
          <% if user_signed_in? %>
            <ul class="navbar-nav me-auto mb-2 mb-lg-0">
              <li class="nav-item">
                <%= link_to "Offboardings", offboardings_path, class: "nav-link" %>
              </li>
              <li class="nav-item">
                <%= link_to "Employees", employees_path, class: "nav-link" %>
              </li>
            </ul>

    

            <ul class="navbar-nav ms-auto">
              <li class="nav-item">
                <%= link_to 'My Account', user_path, class: 'nav-link' %>
              </li>
              <%= form_tag(destroy_user_session_path, method: :delete) do %>
                <%= submit_tag "Logout", class: "nav-link text-danger" %>
              <% end %>
            </ul>
            
          <% else %>
            <ul class="navbar-nav ms-auto">
              <li class="nav-item">
                <%= link_to "Login", new_user_session_path, class: "nav-link" %>
              </li>
              <li class="nav-item">
                <%= link_to "Sign Up", new_user_registration_path, class: "nav-link" %>
              </li>
            </ul>
          <% end %>
        </div>
      </div>
    </nav>
    <br>
    <div class="container">
      <% if notice %>
        <div class="alert alert-success"><%= notice %></div>
      <% end %>
      <% if alert %>
        <div class="alert alert-danger"><%= alert %></div>
      <% end %>

      <%= yield %>
    </div>
  </body>
</html>

