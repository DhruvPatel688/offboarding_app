<% content_for :title, "Editing Employee" %>

<div class="d-flex justify-content-between align-items-center mb-4">
  <h1 class="mb-0" style="font-weight: 600; color: #2c3e50;">Editing Employee</h1>
</div>

<div class="card border-0 shadow-sm">
  <div class="card-body">
    <%= render "form", employee: @employee %>
  </div>
</div>

<div class="mt-3">
  <%= link_to "Show this employee", @employee, class: "btn btn-sm btn-outline-info" %>
  <%= link_to "Back to employees", employees_path, class: "btn btn-sm btn-secondary" %>
</div>