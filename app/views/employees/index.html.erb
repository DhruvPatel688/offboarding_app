<div class="d-flex flex-column flex-md-row justify-content-between align-items-md-center mb-4">
  <h1 class="mb-3 mb-md-0 fs-4 fs-md-1" style="font-weight: 600; color: #2c3e50;">All Employees</h1>
  <%= link_to "Add Employee", new_employee_path, class: "btn btn-custom btn-sm btn-md-normal" %>
</div>

<div class="card border-0 shadow-sm">
  <div class="card-body p-0">
    <div class="table-responsive">
      <table class="table table-hover mb-0">
        <thead class="bg-dark text-white d-none d-md-table-header-group">
          <tr>
            <th>Name</th>
            <th>Email</th>
            <th>Department</th>
            <th>Position</th>
            <th></th>
          </tr>
        </thead>
        <tbody>
          <% @employees.each do |employee| %>
            <tr>
              <td data-label="Name"><%= employee.full_name %></td>
              <td data-label="Email"><%= employee.email %></td>
              <td data-label="Department"><%= employee.department %></td>
              <td data-label="Position"><%= employee.position %></td>
              <td data-label="Actions">
                <%= link_to "Show", employee_path(employee), class: "btn btn-sm btn-outline-custom" %>
                <%= link_to "Edit", edit_employee_path(employee), class: "btn btn-sm btn-edit-custom" %>
                <%= link_to "Delete", employee_path(employee), method: :delete, data: { confirm: "Are you sure?" }, class: "btn btn-sm btn-delete-custom" %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>