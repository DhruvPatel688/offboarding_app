<%= form_with(model: employee) do |form| %>
  <% if employee.errors.any? %>
    <div class="alert alert-danger">
      <h4><%= pluralize(employee.errors.count, "error") %> prohibited this employee from being saved:</h4>

      <ul>
        <% employee.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="mb-3">
    <%= form.label :first_name, class: "form-label" %>
    <%= form.text_field :first_name, class: "form-control" %>
  </div>

  <div class="mb-3">
    <%= form.label :last_name, class: "form-label" %>
    <%= form.text_field :last_name, class: "form-control" %>
  </div>

  <div class="mb-3">
    <%= form.label :email, class: "form-label" %>
    <%= form.text_field :email, class: "form-control" %>
  </div>

  <div class="mb-3">
    <%= form.label :department, class: "form-label" %>
    <%= form.select :department, ["HR", "Marketing", "Sales", "IT"], { prompt: "Select a department" }, class: "form-select" %>
  </div>

  <div class="mb-3">
    <%= form.label :position, class: "form-label" %>
    <%= form.text_field :position, class: "form-control" %>
  </div>

  <div>
    <%= form.submit class: "btn btn-primary" %>
  </div>
<% end %>