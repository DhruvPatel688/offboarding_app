<h1>Task History</h1>
<ul>
  <% @task.task_histories.each do |history| %>
    <li><%= history.user.email %> <%= history.action %> on <%= history.created_at %></li>
  <% end %>
</ul>

<% if notice %>
  <div class="alert alert-success"><%= notice %></div>
<% end %>

<div class="card border-0 shadow-sm">
  <div class="card-body">
    <%= render @task %>
  </div>
</div>

<div class="mt-3">
  <%= link_to "Edit this task", edit_task_path(@task), class: "btn btn-sm btn-outline-primary" %>
  <%= link_to "Back to tasks", @offboarding, class: "btn btn-sm btn-secondary" %>
  <%= button_to "Destroy this task", @task, method: :delete, class: "btn btn-sm btn-outline-danger" %>
</div>