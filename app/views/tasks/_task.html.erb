<div id="<%= dom_id task %>" class="card border-0 shadow-sm mb-3">
  <div class="card-body">
    <h5 class="card-title">Task Details</h5>
    <p class="card-text">
      <strong>Offboarding:</strong>
      <%= task.offboarding_id %>
    </p>
    <p class="card-text">
      <strong>Title:</strong>
      <%= task.title %>
    </p>
    <p class="card-text">
      <strong>Status:</strong>
      <%= task.status %>
    </p>
    <p class="card-text">
      <strong>Assigned to:</strong>
      <%= task.assigned_to %>
    </p>
    <p class="card-text">
      <strong>Notes:</strong>
      <%= task.notes %>
    </p>
  </div>
</div>