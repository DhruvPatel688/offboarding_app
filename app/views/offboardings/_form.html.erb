<%= form_with(model: offboarding) do |form| %>
  <% if offboarding.errors.any? %>
    <div class="alert alert-danger">
      <h4><%= pluralize(offboarding.errors.count, "error") %> prohibited this offboarding from being saved:</h4>

      <ul>
        <% offboarding.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="mb-3">
    <%= form.label :employee_id, class: "form-label" %>
    <%= form.collection_select :employee_id, @employees || [], :id, :full_name, { prompt: "Select an employee" }, class: "form-select" %>

  </div>

  <div class="mb-3">
    <%= form.label :due_date, class: "form-label" %>
    <%= form.date_field :due_date, class: "form-control" %>
  </div>

  <div class="mb-3">
    <%= form.label :status, class: "form-label" %>
    <%= form.select :status, [['Pending', 'pending'], ['In Progress', 'in_progress'], ['Completed', 'completed']], { prompt: "Select a status" }, class: "form-select" %>
  </div>


  <div>
    <%= form.submit class: "btn btn-primary" %>
  </div>
<% end %>